{
  "name": "@chris-zhu/utils",
  "version": "0.0.13",
  "description": "Collection of common and useful JavaScript / TypeScript utilities",
  "keywords": [
    "utils"
  ],
  "license": "MIT",
  "author": "chris-zhu <https://github.com/chris-zhu>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chris-zhu/utils.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "esno src/index.ts",
    "dev": "nr build --watch",
    "build": "rimraf dist && tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:update": "vitest --update",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "zx scripts/release.mjs",
    "removeTag": "zx scripts/removeTag.mjs"
  },
  "bugs": {
    "url": "https://github.com/chris-zhu/utils/issues"
  },
  "homepage": "https://github.com/chris-zhu/utils#readme",
  "devDependencies": {
    "@chris-zhu/eslint-config": "^1.0.0",
    "@types/node": "^17.0.31",
    "bumpp": "^7.1.1",
    "child_process": "^1.0.2",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.15.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "rimraf": "^3.0.2",
    "tsup": "^5.12.7",
    "typescript": "^4.6.4",
    "vite": "^2.9.8",
    "vitest": "^0.12.0",
    "zx": "^6.1.0"
  }
}
